<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#50477eff" android:endColor="#ff477eff"
                android:angle="90" />
            <stroke android:width="1dip" android:color="#50EAEAEA" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#ffc2b7" android:endColor="#ffc2b7"
                android:angle="90" />
            <stroke android:width="1dip" android:color="#ffc2b7" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="#FFA54F" android:endColor="#FF8C00"
                android:angle="90" />
            <stroke android:width="1dip" android:color="#FFA54F" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#00477eff" android:endColor="#00477eff"
                android:angle="90" />
            <stroke android:width="1dip" android:color="#00477eff" />
        </shape>
    </item>


</selector>